    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Nome</th>
                <th>Autor</th>
                <th>Editora</th>
                <th>Data de Lançamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="tabela_livros_body">
            <tr ng-repeat="livro in livros | filter: campo | orderBy: ordemPorNome">
                <td class="hidden">{{livro.id}}</td>
                <td>{{livro.nome}}</td>
                <td>{{livro.autor}}</td>
                <td>{{livro.editora}}</td>
                <td>{{livro.data_lancamento}}</td>
                <td>
                    <button id="botao_editar_modal_{{livro.id}}" class="btn btn-primary" data-toggle="modal" data-target="#modal_editar">Editar</button>
                    <button id="botao_remover_{{livro.id}}" class="btn btn-danger">Remover</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>